[alias]
  c = commit -m
  com = commit
  co = checkout
  cl = clone
  b = branch
  nb = checkout -b
  a = add
  aa = add .
  ar = add -A
  l = log --format='%Cgreen%h%Creset %C(cyan)%an%Creset - %s' --graph
  s = status -sb
  si = status --ignore-submodules
  d = diff --patch-with-stat
  dt = difftool
  ds = diff --staged
  p = push
  t = tag
  pt = push --tags
  sm = submodule
  m = merge
  amend = commit --amend -C HEAD
  undo = reset --soft HEAD^
  r = rebase -i

  # Pull in remote changes for the current repository and all its submodules
  pu = !"git pull; git submodule foreach git pull origin master"
  # Push all branches and set them as upstream tracking
  pa = push --all origin -u

[user]
  name = Thomas J Bradley
  email = hey@thomasjbradley.ca

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[merge]
  tool = Kaleidoscope

[color]
  ui = auto

[core]
  excludesfile = /Users/thomasjbradley/.gitignore
  quotepath = false

[help]
  autocorrect = 1

[push]
  default = simple
